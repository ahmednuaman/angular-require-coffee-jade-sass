{
// Default options
'functions': true,
'classes': true
}

{{#items}}
${{options.target}}_{{name}}_x = {{px.x}};
${{options.target}}_{{name}}_y = {{px.y}};
${{options.target}}_{{name}}_offset_x = {{px.offset_x}};
${{options.target}}_{{name}}_offset_y = {{px.offset_y}};
${{options.target}}_{{name}}_width = {{px.width}};
${{options.target}}_{{name}}_height = {{px.height}};
${{options.target}}_{{name}}_total_width = {{px.total_width}};
${{options.target}}_{{name}}_total_height = {{px.total_height}};
${{options.target}}_{{name}}_image = '{{{escaped_image}}}';
${{options.target}}_{{name}} = {{px.x}} {{px.y}} {{px.offset_x}} {{px.offset_y}} {{px.width}} {{px.height}} {{px.total_width}} {{px.total_height}} '{{{escaped_image}}}';
{{/items}}

{{#options.functions}}
spriteWidth($sprite) {
  width: $sprite[4];
}

spriteHeight($sprite) {
  height: $sprite[5];
}

spritePosition($sprite) {
  background-position: $sprite[2] $sprite[3];
}

spriteImage($sprite) {
  background-image: url($sprite[8]);
}

sprite($sprite) {
  spriteImage($sprite)
  spritePosition($sprite)
  spriteWidth($sprite)
  spriteHeight($sprite)
}
{{/options.functions}}

{{#options.classes}}
{{#items}}
.{{options.target}}-{{name}} {
  sprite(${{options.target}}_{{name}});
}
{{/items}}
{{/options.classes}}