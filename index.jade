doctype html
html(lang='en', data-ng-controller='appController')
  head
    base(href='/')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/assets/vendor/normalize-css/normalize.css')
    link(rel='stylesheet', href='/assets/css/styles.css')
    title
  body
    div#app
      div(data-ng-include, data-src='headerPartial')
      div#view.row(data-ng-view)
      div(data-ng-include, data-src='footerPartial')
    script(src='/assets/vendor/requirejs/require.js', data-main='/assets/js/app')